<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.foodmenu"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:uiOptions="splitActionBarWhenNarrow">"
        <activity
            android:name="com.example.foodmenu.Splash"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.foodmenu.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.foodmenu.MAINACTIVITY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>            
        </activity>
        <activity
            android:name="com.example.foodmenu.AddItem"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.foodmenu.ADDITEM" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>            
        </activity>
        <activity
            android:name="com.example.foodmenu.SQLItemView"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.foodmenu.SQLITEMVIEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>            
        </activity>
        <activity
            android:name="com.example.foodmenu.EditItemActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.foodmenu.EDITITEMACTIVITY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>            
        </activity>
        <activity
            android:name="com.example.foodmenu.AdminLogin"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.foodmenu.ADMINLOGIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>            
        </activity>
        <activity
            android:name="com.example.foodmenu.SuppNameEntry"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.foodmenu.SUPPNAMEENTRY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>            
        </activity>
    </application>

</manifest>